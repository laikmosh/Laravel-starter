{
    "name": "laikmosh/laravel-starter",
    "type": "project",
    "description": "Laravel starter kit with batteries included",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php install.php",
            "@php artisan starter:init"
        ]
    },
    "extra": {
        "starter-kit": {
            "require": {
                "laravel/octane": "^2.12",
                "spatie/laravel-permission": "^6.0",
                "livewire/livewire": "^3.0"
            },
            "require-dev": {
                "barryvdh/laravel-debugbar": "^3.9"
            },
            "npm": {
                "alpinejs": "^3.0",
                "@alpinejs/focus": "^3.0"
            }
        }
    }
}