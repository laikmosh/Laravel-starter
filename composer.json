{
    "name": "laikmosh/laravel-starter",
    "type": "project",
    "description": "Laravel starter kit with batteries included",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/prompts": "^2.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php install.php",
            "@php artisan key:generate",
            "@php artisan starter:init",
            "@php cleanup.php"
        ]
    },
    "extra": {
        "starter-kit": {
            "require": {
                "laravel/octane": "^2.0"
            },
            "require-dev": {},
            "optional": {
                "livewire/livewire": "^3.0",
                "spatie/laravel-permission": "^6.0",
                "laravel/horizon": "^5.0",
                "laikmosh/plog": "^1.0"
            },
            "optional-dev": {
                "barryvdh/laravel-debugbar": "^3.0",
                "laravel/boost": "^1.0"
            },
            "npm": {
                "alpinejs": "^3.0",
                "@alpinejs/focus": "^3.0"
            }
        },
        "packages-artisan-commands": {
            "livewire/livewire": [
                "livewire:install"
            ],
            "laravel/boost": [
                "boost:install"
            ],
            "laravel/horizon": [
                "horizon:install"
            ],
            "laikmosh/plog": [
                "vendor:publish --tag=plog-config",
                "vendor:publish --tag=plog-assets"
            ]
        },
        "packages-post-install-commands": {
            "broadcasting": "install:broadcasting"
        }
    }
}